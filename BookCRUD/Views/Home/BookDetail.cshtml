@model BookCRUD.Models.Book

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .col-lg-8 img {
        height: auto;
        min-height: 500px;
        max-height: 650px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Book</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="~/Admin/Index">Admin</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main class="my-5">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <img
              src="~/img/@Model.BookImg"
              class="w-100 mb-3"
              alt="@Model.BookName"
            />
          </div>
          <div class="col-lg-8 mx-auto">
            <h2 class="text-info">
              Book Name : <span class="text-danger">@Model.BookName</span>
            </h2>
            <h5 class="text-info">
              category Name : <span class="text-warning">@Model.BookGenre.GenreName</span>
            </h5>
            <h5 class="text-info">
               Author Name : <span class="text-success">@Model.BookAuthor.AuthorName @Model.BookAuthor.AuthorSurname</span>
            </h5>
            <h5 class="text-info">
              Price : <span class="text-success-emphasis">@Model.BookPrice &#8380;</span>
            </h5>
          </div>
        </div>
      </div>
    </main>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
